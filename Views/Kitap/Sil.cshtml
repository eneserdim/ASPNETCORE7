@model Kitap

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 style="text-align:center">Kitap Türü Silme</h2>
        </div>

        <div class="class mb-3">
            <label asp-for="KitapAdi" class="pb-0"></label>
            <input disabled type="text" asp-for="KitapAdi" class="form-control">
            <span asp-validation-for="KitapAdi" class="text-danger"></span>

            <label asp-for="Tanim" class="pb-0"></label>
            <input disabled type="text" asp-for="Tanim" class="form-control">
            <span asp-validation-for="Tanim" class="text-danger"></span>

            <label asp-for="Yazar" class="pb-0"></label>
            <input disabled type="text" asp-for="Yazar" class="form-control">
            <span asp-validation-for="Yazar" class="text-danger"></span>

            <label asp-for="Fiyat" class="pb-0"></label>
            <input disabled type="number" asp-for="Fiyat" class="form-control">
            <span asp-validation-for="Fiyat" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-lg btn-success" style="width:250px" >Sil</button>
        <a asp-controller="Kitap" asp-action="Index" class="btn btn-lg btn-danger" type="button" style="width:250px">Vazgeç</a>
    </div>

</form>